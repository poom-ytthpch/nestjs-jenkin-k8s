pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'ytthpch/nestjs-jenkin-k8s'
        DOCKER_TAG = '1.4'
        K8S_NAMESPACE = 'default'
        K8S_DEPLOYMENT_NAME = 'nestjs-jenkin-k8s-app'
        K8S_SERVICE_NAME = 'nestjs-jenkin-k8s-service'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/poom-ytthpch/nestjs-jenkin-k8s.git'
            }
        }
        
        stage('Setup Node.js') {
            steps {
                sh '''
                    # Install Node.js 20 using nvm (no sudo required)
                    curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.0/install.sh | bash
                    export NVM_DIR="$HOME/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                    nvm install 20
                    nvm use 20
                    node --version
                    npm --version
                '''
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh '''
                    export NVM_DIR="$HOME/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                    nvm use 20
                    npm install
                '''
            }
        }
        
        // stage('Run Tests') {
        //     steps {
        //         sh '''
        //             export NVM_DIR="$HOME/.nvm"
        //             [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
        //             nvm use 20
        //             npm run test
        //         '''
        //     }
        // }
        
        stage('Build Application') {
            steps {
                sh '''
                    export NVM_DIR="$HOME/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                    nvm use 20
                    npm run build
                '''
            }
        }
        
        stage('Create Env ConfigMap') {
            steps {
                withCredentials([
                  string(credentialsId: 'nestjs-jenkin-k8s-env', variable: 'ENV_FILE')
                ]) {
                  sh '''
                    echo "=== ENV FILE CONTENT ==="
                    echo "$ENV_FILE"
                    echo ""
                    echo "=== END ENV FILE ==="
                    echo "$ENV_FILE" > .env

                    kubectl delete configmap nestjs-jenkin-k8s-env \
                      --namespace=$K8S_NAMESPACE \
                      --ignore-not-found

                    kubectl create configmap nestjs-jenkin-k8s-env \
                      --from-env-file=.env \
                      --namespace=$K8S_NAMESPACE
                  '''
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}")
                }
            }
        }
        
        stage('Push Docker Image') {
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: 'docker-hub-credentials',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )
                ]) {
                    sh '''
                        echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                        docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                    '''
                }
            }
        }
        
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // อัปเดต image version ใน deployment.yaml
                    sh "sed -i 's|image: ytthpch/nestjs-jenkin-k8s:.*|image: ${DOCKER_IMAGE}:${DOCKER_TAG}|g' k8s/deployment.yaml"
                    
                    // อัปเดต environment variables ใน deployment.yaml
                    sh "sed -i 's|value: \".*\"|value: \"${DOCKER_TAG}\"|g' k8s/deployment.yaml"
                    
                    // ใช้ kubectl ในการ deploy
                    sh "kubectl apply -f k8s/deployment.yaml -n ${K8S_NAMESPACE}"
                    sh "kubectl apply -f k8s/service.yaml -n ${K8S_NAMESPACE}"
                    
                    // รอให้ deployment พร้อม
                    sh "kubectl rollout status deployment/${K8S_DEPLOYMENT_NAME} -n ${K8S_NAMESPACE}"
                }
            }
        }
    }
    
    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
