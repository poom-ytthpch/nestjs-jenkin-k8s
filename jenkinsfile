pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'ytthpch/nestjs-jenkin-k8s'
        DOCKER_TAG = '1.4'
        K8S_NAMESPACE = 'default'
        K8S_DEPLOYMENT_NAME = 'nestjs-jenkin-k8s-app'
        K8S_SERVICE_NAME = 'nestjs-service'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/poom-ytthpch/nestjs-jenkin-k8s.git'
            }
        }
        
        stage('Setup Node.js') {
            steps {
                sh 'node --version'
                sh 'npm --version'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Run Tests') {
            steps {
                sh 'npm run test'
            }
        }
        
        stage('Build Application') {
            steps {
                sh 'npm run build'
            }
        }
        
        stage('Create Env ConfigMap') {
            steps {
                withCredentials([
                  string(credentialsId: 'nestjs-jenkin-k8s-env', variable: 'ENV_FILE')
                ]) {
                  sh '''
                    echo "$ENV_FILE" > .env

                    kubectl delete configmap nestjs-jenkin-k8s-env \
                      --namespace=$K8S_NAMESPACE \
                      --ignore-not-found

                    kubectl create configmap nestjs-jenkin-k8s-env \
                      --from-env-file=.env \
                      --namespace=$K8S_NAMESPACE
                  '''
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}")
                }
            }
        }
        
        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-hub-credentials') {
                        docker.image("${DOCKER_IMAGE}:${DOCKER_TAG}").push()
                    }
                }
            }
        }
        
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // อัปเดต image version ใน deployment.yaml
                    sh "sed -i 's|image: ytthpch/nestjs-jenkin-k8s:.*|image: ${DOCKER_IMAGE}:${DOCKER_TAG}|g' k8s/deployment.yaml"
                    
                    // อัปเดต environment variables ใน deployment.yaml
                    sh "sed -i 's|value: \".*\"|value: \"${DOCKER_TAG}\"|g' k8s/deployment.yaml"
                    
                    // ใช้ kubectl ในการ deploy
                    sh "kubectl apply -f k8s/deployment.yaml -n ${K8S_NAMESPACE}"
                    sh "kubectl apply -f k8s/service.yaml -n ${K8S_NAMESPACE}"
                    
                    // รอให้ deployment พร้อม
                    sh "kubectl rollout status deployment/${K8S_DEPLOYMENT_NAME} -n ${K8S_NAMESPACE}"
                }
            }
        }
    }
    
    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
