pipeline {
   agent any
    
    environment {
        DOCKER_IMAGE = "ytthpch/nestjs-jenkin-k8s"
        DOCKER_TAG   = "${BUILD_NUMBER}"

        K8S_NAMESPACE  = "default"
        K8S_DEPLOYMENT = "nestjs-jenkin-k8s-app"
        CONTAINER_NAME = "nestjs"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/poom-ytthpch/nestjs-jenkin-k8s.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    docker run --rm -v ${WORKSPACE}:/app -w /app node:20 npm install
                '''
            }
        }

        stage('Build') {
            steps {
                sh '''
                    docker run --rm -v ${WORKSPACE}:/app -w /app node:20 npm run build
                '''
            }
        }

        stage('Build Image') {
            steps {
                sh '''
                  docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                '''
            }
        }

        stage('Push Image') {
            steps {
                withCredentials([
                  usernamePassword(
                    credentialsId: 'docker-hub-credentials',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                  )
                ]) {
                    sh '''
                      echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                      docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                    '''
                }
            }
        }

        stage('Deploy') {
            steps {
                withCredentials([
                  file(credentialsId: 'k8s-config', variable: 'KUBECONFIG')
                ]) {
                    sh '''
                      kubectl --kubeconfig=$KUBECONFIG \
                        set image deployment/${K8S_DEPLOYMENT} \
                        ${CONTAINER_NAME}=${DOCKER_IMAGE}:${DOCKER_TAG} \
                        -n ${K8S_NAMESPACE}

                      kubectl --kubeconfig=$KUBECONFIG \
                        rollout status deployment/${K8S_DEPLOYMENT} \
                        -n ${K8S_NAMESPACE}
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deploy Success"
        }

        failure {
            echo "❌ Deploy Failed"
        }
    }
}